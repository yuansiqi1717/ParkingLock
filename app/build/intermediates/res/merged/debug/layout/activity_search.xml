<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/id_ll_top"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/id_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_platform_top_bg">
            <com.saiyi.parkinglock.base.common.widget.ClearEditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/id_tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="搜索"
                android:textColor="@color/black_gray_select"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:divider="@color/color999"
        android:dividerHeight="0.2dp">
    </ListView>


</LinearLayout>