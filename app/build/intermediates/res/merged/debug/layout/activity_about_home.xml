<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color999"
    >

    <include layout="@layout/top_common"
        android:visibility="gone"></include>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="爱码停车V 1.0.1.2018"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color333"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:background="@drawable/select_white_bg2"
        android:text="分享爱码停车"
        android:textColor="@color/color333"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:id="@+id/id_share_tv"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tv_share_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:background="@drawable/select_white_bg2"
        android:text="分享列表"
        android:textColor="@color/color333"
        android:textSize="16sp"
        android:clickable="true"
        android:visibility="visible"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/id_user_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:background="@drawable/select_white_bg2"
        android:text="用户协议"
        android:textColor="@color/color333"
        android:textSize="16sp"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:background="@drawable/select_white_bg2"
        android:text="充值协议"
        android:textColor="@color/color333"
        android:textSize="16sp"
        android:id="@+id/id_recharge_tv"
        android:clickable="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/id_check_version_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_white_bg2"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="检查版本更新" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:id="@+id/id_check_tv"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:id="@+id/id_down_load_progress_tv"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_down_load_progress"
            android:background="@color/color_orange"
            android:alpha="0.5"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="爱码停车 版权所有"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Copyright@ 2018-2022"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/black"/>


</LinearLayout>