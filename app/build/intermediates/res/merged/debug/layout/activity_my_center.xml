<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3"
    >

    <include layout="@layout/top_common"
        android:visibility="gone"></include>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:clickable="true"
        android:background="@drawable/select_white_bg1"
        android:id="@+id/id_hand_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:id="@+id/id_lock_name_tv"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_lock_user_back_iv"
            android:layout_alignParentRight="true"
            android:src="@drawable/into"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/id_lock_user_back_iv"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/id_user_iv"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/head_portrait2"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/select_transparent_bg1"
                android:gravity="center"
                android:id="@+id/id_progress_bar"
                android:visibility="gone"
                />

        </FrameLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:divider="@color/color999"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:id="@+id/id_menu_iv"
        android:divider="@color/color999"
        android:dividerHeight="0.5dp"
        >

    </ListView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:clickable="true"
        android:background="@drawable/select_white_bg1"
        android:id="@+id/id_share_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享个人车位信息"
            android:id="@+id/id_exit_tv"
            android:textColor="@color/color333"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/into"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</LinearLayout>