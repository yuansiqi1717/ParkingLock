<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3"
    >
    <!--我的订单-->

    <include layout="@layout/top_common"
        android:visibility="gone"></include>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/id_prt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="累计停车时长"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_orange"
                    android:textSize="20sp"
                    android:id="@+id/id_time_hour"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="小时"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/id_time_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_orange"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="分钟"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <ListView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scrollbars="none"
                android:id="@+id/id_menu_iv"
                android:dividerHeight="10dp"
                android:divider="@color/color_f3"
                android:visibility="visible">

            </ListView>

            <LinearLayout
                android:id="@+id/ll_no_order"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/default1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="没有订单~"
                    android:textColor="@color/color333"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>


    </in.srain.cube.views.ptr.PtrFrameLayout>

