<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f9"
    android:orientation="vertical">
    <!--支付密码设置-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:visibility="gone">
        <ImageView
            android:id="@+id/id_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="设置支付密码"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:id="@+id/ll_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请为账号"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/id_tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置6位数字密码"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_circles"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/view1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/shape_gray_round_bg1"/>
        <TextView
            android:id="@+id/view2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/shape_gray_round_bg1"/>
        <TextView
            android:id="@+id/view3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/shape_gray_round_bg1"/>
        <TextView
            android:id="@+id/view4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/shape_gray_round_bg1"/>
        <TextView
            android:id="@+id/view5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/shape_gray_round_bg1"/>
        <TextView
            android:id="@+id/view6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:inputType="numberPassword"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/shape_gray_round_bg1"/>

    </LinearLayout>



    <Button
        android:id="@+id/id_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/select_orange_bg4"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:enabled="false"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"/>

    <com.saiyi.parkinglock.widget.KeyboardView
        android:id="@+id/view_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible" />

    <com.saiyi.parkinglock.widget.KeyboardView
        android:id="@+id/view_keyboard_once"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>


</LinearLayout>