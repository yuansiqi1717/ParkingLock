<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3"
    >
    <include layout="@layout/top_common"
        android:visibility="gone"></include>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/id_prt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:scrollbars="none"
                android:id="@+id/id_menu_iv"
                android:divider="@color/color999"
                android:dividerHeight="0.5dp"
                android:visibility="gone">
            </ListView>

            <LinearLayout
                android:id="@+id/ll_no_record"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/default1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="暂无充值记录"
                    android:textSize="16sp"
                    android:textColor="@color/color333"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>


    </in.srain.cube.views.ptr.PtrFrameLayout>

